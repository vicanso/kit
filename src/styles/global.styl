@import './common'

*
  box-sizing border-box
  &:before, &:after
    box-sizing border-box
.clearfix:before, .clearfix:after
  display table
  content " "
.clearfix:after
  clear both

body, html
  margin 0
  background #f5f5f5
  color #333

.router-fade-enter-active, .router-fade-leave-active
  transition opacity .3s
.router-fade-enter, .router-fade-leave-active
  opacity  0
.tac
  text-align center
.tar
  text-align right
.bold
  font-weight 600

a
  text-decoration none
  color $COLOR_BLUE 